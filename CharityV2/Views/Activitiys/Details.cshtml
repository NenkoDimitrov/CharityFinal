@model CharityV2.Models.ActivityDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Допълнителна информация</h1>

<div>
    <hr />
    <dl class="row">
        <dd>
            <div class="img-fluid">
                @foreach (var item in Model.ImagePath)
                {
                    <div>
                        <img class="rounded float-sm-right justify-content-md-center" width="200" src="@item" alt="Image for @Model.Name" />
                    </div>
                }
            </div>
        </dd>
        <dt class="col-sm-2">
          Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
           Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Местоположение
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class="col-sm-2">
            Начало
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
           Край
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
           Време на регистриране на събитието
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationTime)
        </dd>
        <dt class="col-sm-2">
            Брой интересуващи се
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountInterest)
        </dd>
        <dt class="col-sm-2">
            Брой участници
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountParticipants)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        
    </dl>
</div>
<div>

    <a asp-action="Index">Back</a>
</div>
